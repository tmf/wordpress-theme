{% extends 'base.html.twig' %}

{% block title %}{{ post.post_title }}{% endblock %}

{% block content %}
    <!-- Main Wrapper -->
    <div class="wrapper wrapper-style2">
        <div class="title">
            {{ post.post_title }}
        </div>
        <div class="container">
            <div class="row">
                <div class="12u">
                    <article {{ wp.post_class() }} >
                        <header>
                            <h1>{{ post.post_title }}</h1>
                        </header>
                        {{ post.post_content }}
                    </article>
                </div>
            </div>
        </div>
    </div>
    <!-- /Main Wrapper -->
{% endblock %}